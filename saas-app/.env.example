# ================================
# GitRepo Analyzer SaaS — Environment Variables
# ================================
# Copy this file to .env.local and fill in your values

# MongoDB Connection (MongoDB Atlas recommended)
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/git_repo_analyzer

# GitHub Personal Access Token (raises rate limit from 60 to 5000 req/hr)
# Generate at: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Groq AI API Key (free tier — LLaMA 3.3 70B, ultra-fast)
# Get yours at https://console.groq.com/keys
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# JWT Secret for Admin Authentication
# Generate a strong random string
JWT_SECRET=your-super-secret-jwt-key-change-this

# Admin Credentials (initial setup)
ADMIN_EMAIL=admin@gitrepoanalyzer.com
ADMIN_PASSWORD=change-this-password

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
